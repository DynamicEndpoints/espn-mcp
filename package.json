{
  "name": "espn-mcp-server",
  "version": "2.0.0",
  "description": "Modern ESPN MCP Server with resources, prompts, tools, and HTTP streaming support for the latest 2025 MCP specification",
  "type": "module",
  "module": "./src/index.ts",
  "main": "./build/modern-server.js",
  "bin": {
    "espn-server": "./build/index.js",
    "espn-lazy-server": "./build/lazy-server.js",
    "espn-core-server": "./build/core.js",
    "espn-modern-server": "./build/modern-server.js"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755') && require('fs').chmodSync('build/lazy-server.js', '755')\"",
    "prepare": "npm run build",
    "dev": "npm run build && node build/core.js",
    "dev:original": "npm run build && node build/index.js",
    "dev:lazy": "npm run build && node build/lazy-server.js",
    "dev:http": "npm run build && TRANSPORT=http node build/modern-server.js",
    "dev:modern": "npm run build && node build/modern-server.js --http",
    "start": "TRANSPORT=http node build/modern-server.js",
    "start:original": "node build/index.js",
    "start:lazy": "node build/lazy-server.js",
    "start:http": "TRANSPORT=http node build/modern-server.js",
    "start:modern": "node build/modern-server.js",
    "start:modern:http": "TRANSPORT=http node build/modern-server.js",
    "docker:build": "docker build -t espn-mcp-server:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s-deployment.yaml",
    "k8s:delete": "kubectl delete -f k8s-deployment.yaml"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "files": [
    "build"
  ]
}
